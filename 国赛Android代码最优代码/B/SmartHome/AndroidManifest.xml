<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smarthome"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="utils.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.smarthome.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.smarthome.SignInActivity"
            android:label="@string/title_activity_sign_in" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.smarthome.LoadingActivity"
            android:label="@string/title_activity_loading" >
        </activity>
        <activity
            android:name="com.example.smarthome.ControlActivity"
            android:label="@string/title_activity_control" >
        </activity>
        <activity
            android:name="com.example.smarthome.LinkActivity"
            android:label="@string/title_activity_link" >
        </activity>
        <activity
            android:name="com.example.smarthome.ChartActivity"
            android:label="@string/title_activity_chart" >
        </activity>
    </application>

</manifest>
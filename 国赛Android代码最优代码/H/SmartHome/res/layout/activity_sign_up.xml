<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".SignUpActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo" />

    <CheckBox
        android:id="@+id/cb_p1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginLeft="219dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/p1"
        android:button="@null" />

    <CheckBox
        android:id="@+id/cb_p2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBaseline="@+id/cb_p1"
        android:layout_alignBottom="@+id/cb_p1"
        android:layout_marginLeft="111dp"
        android:layout_toRightOf="@+id/cb_p1"
        android:background="@drawable/p2"
        android:button="@null" />

    <CheckBox
        android:id="@+id/cb_p3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/cb_p1"
        android:layout_below="@+id/cb_p1"
        android:layout_marginTop="64dp"
        android:background="@drawable/p3"
        android:button="@null" />

    <CheckBox
        android:id="@+id/cb_p4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/cb_p2"
        android:layout_below="@+id/cb_p2"
        android:layout_marginTop="60dp"
        android:background="@drawable/p4"
        android:button="@null" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:text="请选择头像"
        android:textColor="#fff"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cb_p3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cb_p2"
        android:layout_alignBottom="@+id/cb_p2"
        android:layout_marginLeft="108dp"
        android:layout_toRightOf="@+id/textView1"
        android:background="#fff"
        android:text="注册" />

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_signup"
        android:layout_below="@+id/cb_p2"
        android:background="#fff"
        android:text="返回" />

</RelativeLayout>
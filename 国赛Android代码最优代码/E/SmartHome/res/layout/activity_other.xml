<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/al"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    tools:context=".OtherActivity" >

    <CheckBox
        android:id="@+id/cb_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="34dp"
        android:layout_y="32dp"
        android:text="模式控制："
        android:textSize="25sp" />

    <Switch
        android:id="@+id/sw_isli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="48dp"
        android:layout_y="80dp"
        android:textOff="在家"
        android:textOn="离家" />

    <CheckBox
        android:id="@+id/cb_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="31dp"
        android:layout_y="133dp"
        android:text="联动控制："
        android:textSize="25sp" />

    <Spinner
        android:id="@+id/sp2"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_x="128dp"
        android:layout_y="184dp" />

    <EditText
        android:id="@+id/et_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="221dp"
        android:layout_y="197dp"
        android:ems="5"
        android:inputType="number"
        android:singleLine="true" >

        <requestFocus />
    </EditText>

    <Spinner
        android:id="@+id/sp1"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_x="35dp"
        android:layout_y="185dp" />

    <Spinner
        android:id="@+id/sp3"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_x="345dp"
        android:layout_y="189dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="352dp"
